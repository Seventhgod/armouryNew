<section class="section">
  <div class="section-header">
    <h4>Add New Soldier</h4>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item active"><a href="/trial/index">Dashboard</a></div>
      <div class="breadcrumb-item"><a href="/soldiers">Soldiers</a></div>
      <div class="breadcrumb-item">New</div>
    </div>
  </div>

  <div class="section-body">
    <h2 class="section-title">Add New</h2>
    <p class="section-lead">
      Enter Details for Soldier
    </p>

    <div class="card">
      <div class="card-header">
        <h4>Soldier</h4>
      </div>
      <div class="card-body">
        <%= form_for @soldiers do |f| %>
          <div class="form-row">
            <div class="form-group col-sm-6">
              <%= f.label 'Service Number' %>
              <%= f.text_field :svc_number, class: "form-control", required: "true"%>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :rank %>
              <%= f.text_field :rank, class:"form-control", required: "true" %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-sm-6">
              <%=f.label :name %>
              <%= f.text_field :name, class:"form-control", required: true %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :gender %>
              <select class="form-control" name="soldier[gender]" id="soldier_gender" required>
                <option>Select Gender</option>
                <option value="Female">Female</option>
                <option value="Male">Male</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label "Date Of Birth" %>
              <%= f.date_field :dob, class: "form-control", required:true %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label :unit %>
              <%= f.text_field :unit, class:"form-control", required: true %>
            </div>
          </div>
          <div class="card-footer">
            <input type="submit" name="commit" value="Save" data-disable-with="Save" class="btn btn-primary"/>   <a href="/soldiers" class="btn btn-default">Back</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
