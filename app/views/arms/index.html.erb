<div class="section">
  <div class="section-header">
    <h1>Arms</h1>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
      <div class="breadcrumb-item"><a href="/arms">Arms</a></div>
      <div class="breadcrumb-item">Index</div>
    </div>
  </div>

  <div class="section-body">
    <h2 class="section-title">Arms Table</h2>
    <p class="section-lead">All recorded Arms</p>

    <div class="row">
      <div class="col-12 col-md-12 col-lg-12">
        <div class="card">
          <div class="card-header">
            <h4>Arms Table</h4><b style="padding-left: 80%"><a class="btn btn-success " href="/arms/new">New Arm</a></b>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-md">
                <thead>
                <tr>
                  <th>Serial Num</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Serviceability</th>
                  <th>Show</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
                </thead>
                <tbody>
                  <% @arms.each do |arm| %>
                  <tr>
                    <td><%= arm.srl_num %></td>
                    <td><%= arm.arm_name %></td>
                    <td><%= arm.arm_type %></td>
                    <td><%= arm.service_b %></td>
                    <td><a class="btn btn-icon btn-info" href="/arms/<%= arm.id %>"><i class="fas fa-info-circle"></i></a></td>
                    <td><a class="btn btn-icon btn-primary" href="/arms/<%= arm.id %>/edit"><i class="far fa-edit"></i></a></td>
                    <td><a data-confirm="Are you sure?" class="btn btn-icon btn-danger" rel="nofollow" data-method="delete" href="/arms/<%= arm.id %>"><i class="fas fa-times"></i></a></td>
                  </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>