<section class="section">
  <div class="section-header">
    <h4>Arm Details</h4>
    <div class="section-header-breadcrumb">
      <div class="breadcrumb-item active"><a href="/trial/index">Dashboard</a></div>
      <div class="breadcrumb-item"><a href="/arms">Arms</a></div>
      <div class="breadcrumb-item">Show</div>
    </div>
  </div>

  <div class="section-body">
    <h2 class="section-title">Show Request</h2>
    <p class="section-lead">
      Arm Request Details
    </p>

    <div class="card">
      <div class="card-header">
        <h4><b>Request</b> Details</h4>
      </div>
      <div class="card-body">
        <%= form_for @armreq do |f| %>
          <div class="form-row">
            <div class="form-group col-sm-6">
              <%=f.label 'Request Made For:' %>
              <%= @armreq.personnel %>
            </div>
            <div class="form-group col-md-6">
              <%=f.label 'Arm Type:' %>
              <%= @armreq.arm_type %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-sm-6">
              <%=f.label 'Arm:' %>
              <%= @armreq.arm %>
            </div>
            <div class="form-group col-md-6">
              <%=f.label 'Request Made By:' %>
              <%= @armreq.user %>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.label 'Request Date' %>
              <%= @armreq.request_date %>
            </div>
            <div class="form-group col-md-6">
              <%= f.label 'Return Status' %>
              <%= @armreq.return_status %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label 'Return Date' %>
            <%= @armreq.return_date %>
          </div>
          <div class="card-footer">
            <a href="/armrequests" class="btn btn-default">Back</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>